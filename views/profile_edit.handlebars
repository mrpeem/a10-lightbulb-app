    $('#changePassword-btn').click(function(e)
    {
        e.preventDefault();
        var originalPassword = $('#originalPassword').val();
        var newPassword1 = $('#newPassword1').val();
        var newPassword2 = $('#newPassword2').val();

        changePassword(originalPassword, newPassword1, newPassword2);
    });

    //---------

    $('#changeInfo-btn').click(function(e)
    {
        e.preventDefault();
        var description = $('#description').val();
        var actualName = $('#name').val();
        var usrName = $('#username').val();
        var email = $('#email').val();

        changeInfo(email, actualName, usrName, description);
