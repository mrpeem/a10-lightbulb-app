                              <input type="text" class="form-control signup-input" id="name" name="name" value="{{actualName}}">
                              
                              <center>
                                <p style="display:inline">Name</p>
                              </center>
                            </div>

                            <!-- Username -->
                            <div class="form-group">
                              <input type="text" class="form-control signup-input" id="username"  name="username" value="{{userName}}">
                              
                              <center>
                                <p style="display:inline">Username</p>
                                <p id="username-taken"></p>
                              </center>
                            </div>

                            <!-- Description -->
                            <div class="form-group">
                              <input type="text" class="form-control signup-input" id="description" name="description" onClick="this.setSelectionRange(0, this.value.length)" value="{{description}}">
                              
                              <center>
                                <p style="display:inline">Description</p>
                              </center>
                            </div>

                            <!-- Sign-up button -->
                            <div class="row">
                                <div class="col-sm-12">                              
                                    <input id="changeInfo-btn" class="btn btn-primary btn-sm signup-input"  value="Save Info" onclick="changeInfoClicked({{userIdNumber}})"" ></input>
                                </div>
                            </div>

                          

                        </form>


                    </div>

                </div>

            </div>

        </div>
    </div>
</div>

