                            </div>
                            <!-- Password -->
                            <div class="form-group">
                              <input type="password" class="form-control signup-input" id="password" name="password" value="{{password}}">
                              <center>Password</center>
                            </div>

                           



                            <!-- Submit button -->
                            <br>
                            <div class="row">
                                <div class="col-sm-12">
                                    <input type="submit" id="changePassword-btn" type="button" class="btn btn-primary btn-sm" value="Save Password" />
                                </div>
                            </div>




                        </form>
                    </div>

                    <!-- Registration form -->
                    <div class="tab-pane active" id="Info">
                        <form id="addFriendForm" role="form">
